    "name": "aispladema/vms-connect",
    "type": "library",
    "description": "PHP Video Management System Integration Tools",
    "keywords": [
        "aispladema",
        "vms-connect"
    ],
    "homepage": "https://github.com/aispladema/vms-connect",
    "license": "MIT",
    "authors": [
