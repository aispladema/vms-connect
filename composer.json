    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2.5",
        "guzzlehttp/guzzle": "^6.3",        
        "nesbot/carbon": "^2.27.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "VMSConnect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VMSConnect\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1.0-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
		"sort-packages": true,
        "optimize-autoloader": true
    }
}
