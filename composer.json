{
    "name": "aispladema/vms-connect",
    "type": "library",
    "description": "PHP Video Management System Integration Tools",
    "keywords": [
        "aispladema",
        "vms-connect"
    ],
    "homepage": "https://github.com/aispladema/vms-connect",
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro J. PÃ©rez",
            "email": "perezalejandrojulian@gmail.com",
            "homepage": "https://github.com/perezale",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "guzzlehttp/guzzle": "^6.3",
        "nathanmac/parser": "^4.3",
        "nesbot/carbon": "^1.22"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "VMSConnect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VMSConnect\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
